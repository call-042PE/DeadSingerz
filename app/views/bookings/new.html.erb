<div class="container booking-new">
<h2 class="singer-name-booking">Booking <%= @singer.name %></h2>
  <div class="booking-singer-image">
    <%= cl_image_tag @singer.photo.key,:class => "booking-img-singer", height: 200, width: 300, crop: :fill %>
  </div>
  <div class="singer-details">
    <h3><%= @singer.name %>'s Owner: <%= @singer.user.first_name %> <%= @singer.user.last_name %></h3>
    <br>
    <h3>Price: <%= @singer.price %>$</h3>
  </div>

  <div class="form-booking">
    <%= simple_form_for [@singer, @booking] do |b| %>

    <%= b.input :user_id, input_html: { value: current_user.id }, as: :hidden %>
    <%= b.input :singer_id, input_html: { value: @singer.id} , as: :hidden %>
    <%= b.input :date, as: :date, html5: true %>

    <%= b.button :submit, class: "btn btn-primary align-text-bottom btn-booking"%>

    <%end%>
  </div>
</div>
